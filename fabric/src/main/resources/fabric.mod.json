{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${author}"
    ],
    "contact": {
        "homepage": "${display_url}"
    },
    "license": "${license}",
    "icon": "${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.favouriteless.enchanted.EnchantedFabric"
        ],
        "client": [
            "com.favouriteless.enchanted.client.EnchantedFabricClient"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": ">=${fabric_api_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "stateobserver": ">=${stateobserver_version}",
        "smartbrainlib": ">=${sbl_version}",
        "patchouli": ">=${patchouli_fabric_version}",
        "geckolib": ">=${geckolib_fabric_version}",
        "forgeconfigapiport": ">=${forgeconfigapi_version}",
        "java": ">=17"
    },
    "accessWidener" : "${mod_id}.accesswidener"
}
  