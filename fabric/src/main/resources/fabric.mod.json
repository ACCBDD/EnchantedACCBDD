{
    "schemaVersion": 1,
    "id": "enchanted",
    "version": "${version}",
    "name": "Enchanted",
    "description": "Witchcraft and Occultism based on real history and folklore.",
    "authors": [
        "Favouriteless"
    ],
    "contact": {
        "homepage": "https://github.com/Favouriteless/Enchanted"
    },
    "license": "All Rights Reserved",
    "icon": "enchanted.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "favouriteless.enchanted.EnchantedFabric"
        ],
        "client": [
          "favouriteless.enchanted.fabric.client.EnchantedFabricClient"
        ]
    },
    "mixins": [
        "enchanted.mixins.json",
        "enchanted.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": ">=${fabric_api_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=21"
    },
    "accessWidener" : "enchanted.accesswidener"
}
  